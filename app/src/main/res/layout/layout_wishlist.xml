<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:background="#3FA7D6"
            app:riv_corner_radius="@dimen/dp10"
            android:id="@+id/imag_wishlist"
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp100"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/fram1"
            android:layout_margin="@dimen/dp10"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:textColor="@color/black"
                android:textSize="@dimen/sp15"
                android:text="@string/name"
                style="@style/TextViewBase"/>
            <TextView
                android:id="@+id/tv_creator"
                android:alpha="0.6"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/dp10"
                android:textSize="@dimen/sp13"
                android:text="@string/name"
                style="@style/TextViewBase"/>

            <TextView
                android:alpha="0.7"
                android:id="@+id/tv_price"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/sp18"
                android:text="@string/price"
                style="@style/TextViewBase"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/dp10"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="end"
                android:padding="@dimen/sp10"
                android:src="@drawable/ic_heat"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"/>
            <Button
                android:id="@+id/btn_buy"
                android:layout_marginTop="@dimen/dp10"
                style="@style/Theme.AppCompat.DayNight.NoActionBar"
                android:text="@string/buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>