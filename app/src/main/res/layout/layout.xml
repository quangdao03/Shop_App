<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_left_right"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp20"

  >
    <TextView
        android:alpha="0.8"
        android:textStyle="bold"
        android:textSize="@dimen/sp20"
        android:layout_marginTop="@dimen/dp34"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:text="This item is added to Cart"
        style="@style/TextViewBase"/>
    <TextView
        android:alpha="0.8"
        android:layout_marginTop="@dimen/dp20"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:text="See your cart to proceed to checkout."
        style="@style/TextViewBase"/>
    <TextView
        android:id="@+id/tv_tap"
        android:textColor="@color/color_app"
        android:layout_gravity="center"
        android:text="Tap here."
        style="@style/TextViewBase"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Ok"
        android:layout_marginTop="@dimen/dp34"
        android:textColor="@color/white"
        android:text="Ok"
        android:background="@drawable/bg_buy_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>