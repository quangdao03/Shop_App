<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ShopDetailActivity"
    android:orientation="vertical">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_shop"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <TextView
            android:layout_marginTop="@dimen/dp10"
            android:id="@+id/tv_name_shop"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"
            android:text="Name Shop"
            android:layout_below="@id/img_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/dp5"
            android:id="@+id/tv_rate"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/rate"
            android:layout_below="@id/img_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/dp5"
            android:id="@+id/tv_address"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/address_payment"
            android:layout_below="@id/img_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginHorizontal="@dimen/dp10"
        tools:itemCount="3"
        tools:listitem="@layout/item_layout_new_arrivals"
        android:layout_marginTop="@dimen/dp10"
        android:id="@+id/rcy_product_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>