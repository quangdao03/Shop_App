<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterUser"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="@dimen/dp50"
                    android:layout_marginBottom="@dimen/dp10"
                    android:src="@drawable/login1" />
            </FrameLayout>

            <TextView
                android:layout_gravity="center"
                android:alpha="0.8"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:text="Create account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img_User"
                app:civ_border_color="@color/color_app"
                app:civ_border_width="1dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/profile"
                android:layout_width="@dimen/dp100"
                android:layout_height="@dimen/dp100"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_UserName"
                android:textSize="@dimen/sp14"
                android:hint="Username"
                android:layout_marginTop="@dimen/dp20"
                android:paddingStart="18dp"
                android:drawablePadding="@dimen/dp10"
                android:drawableStart="@drawable/profile"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/bg_button_normal_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:inputType="textPassword"
                android:id="@+id/edt_Password"
                android:textSize="@dimen/sp14"
                android:hint="Password"
                android:layout_marginTop="@dimen/dp20"
                android:paddingStart="20dp"
                android:drawablePadding="@dimen/dp20"
                android:drawableStart="@drawable/password"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/bg_button_normal_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_Email"
                android:textSize="@dimen/sp14"
                android:hint="Email"
                android:layout_marginTop="@dimen/dp20"
                android:paddingStart="22dp"
                android:drawablePadding="@dimen/dp15"
                android:drawableStart="@drawable/email"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/bg_button_normal_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_Phone"
                android:textSize="@dimen/sp14"
                android:hint="Phone"
                android:layout_marginTop="@dimen/dp20"
                android:paddingStart="20dp"
                android:drawablePadding="@dimen/dp15"
                android:drawableStart="@drawable/address"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/bg_button_normal_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_Address"
                android:textSize="@dimen/sp14"
                android:hint="Address"
                android:layout_marginTop="@dimen/dp20"
                android:paddingStart="20dp"
                android:drawablePadding="@dimen/dp15"
                android:drawableStart="@drawable/profile"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/bg_button_normal_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"/>

            <LinearLayout
                android:layout_marginTop="@dimen/dp10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginEnd="@dimen/dp10"
                    android:layout_gravity="center|start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:text="Create "
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:clickable="true"
                    android:foreground="?android:attr/actionBarItemBackground"
                    android:focusable="true"
                    android:id="@+id/img_Register"
                    android:layout_marginEnd="40dp"
                    android:padding="@dimen/dp10"
                    android:background="@drawable/bg_button_default"
                    android:src="@drawable/right"
                    android:layout_width="@dimen/dp82"
                    android:layout_height="40dp"/>


            </LinearLayout>
            <FrameLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView

                    android:id="@+id/imageView2"
                    android:layout_width="90dp"
                    android:layout_height="140dp"
                    android:layout_gravity="bottom"
                    android:src="@drawable/login_2" />
                <TextView
                    android:layout_gravity="center"
                    android:text="Don't have an account? "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="center"
                    android:text=" Create. "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>




</LinearLayout>