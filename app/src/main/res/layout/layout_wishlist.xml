<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp100"
            android:layout_margin="@dimen/dp10"
            app:cardBackgroundColor="#3FA7D6"
            app:cardCornerRadius="@dimen/dp10">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imag_wishlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/fram1" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                style="@style/TextViewBase"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="@dimen/sp15" />

            <TextView
                android:id="@+id/tv_creator"
                style="@style/TextViewBase"
                android:layout_marginTop="@dimen/dp10"
                android:alpha="0.6"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="@dimen/sp13" />

            <TextView
                android:id="@+id/tv_price"
                style="@style/TextViewBase"
                android:layout_marginTop="@dimen/sp18"
                android:alpha="0.7"
                android:text="@string/price"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/dp10"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                android:layout_gravity="end"
                android:padding="@dimen/sp10"
                android:src="@drawable/ic_heat" />

            <Button
                android:id="@+id/btn_buy"
                style="@style/Theme.AppCompat.DayNight.NoActionBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:text="@string/buy" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>