<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
        >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/check_item"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_width="@dimen/dp30"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <com.makeramen.roundedimageview.RoundedImageView

            android:layout_gravity="center"
            android:background="#3FA7D6"
            app:riv_corner_radius="10dp"
            android:id="@+id/imag_CartList"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/fram1"
/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name_cart"
                android:textColor="@color/black"
                android:textSize="@dimen/sp15"
                android:text="@string/name"
                style="@style/TextViewBase"/>
            <TextView
                android:id="@+id/tv_creator_cart"
                android:alpha="0.6"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/dp10"
                android:textSize="@dimen/sp13"
                android:text="@string/name"
                style="@style/TextViewBase"/>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:alpha="0.7"
                    android:id="@+id/tv_price_cart"
                    android:textColor="@color/black"
                    android:text="@string/price"
                    style="@style/TextViewBase"/>
                <TextView
                    android:alpha="0.7"
                    android:textColor="@color/black"
                    android:text="@string/price_product"
                    style="@style/TextViewBase"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:paddingBottom="@dimen/dp5"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_gravity="center"

            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/item_delete_cart"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                android:layout_gravity="end"
                android:paddingHorizontal="@dimen/dp12"

                android:src="@drawable/ic_delete" />

            <LinearLayout

                android:layout_marginTop="@dimen/dp30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="center"
                    android:text="@string/quantity"
                    android:textSize="@dimen/sp16"
                    android:textColor="@color/black"
                    style="@style/TextViewBase"/>
                <TextView
                    android:id="@+id/tv_quantity"
                    style="@style/TextViewBase"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp5"
                    android:layout_marginEnd="@dimen/dp10"
                    android:gravity="center"
                    android:text="@string/two"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="#BBBBBB"
        android:layout_margin="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp2"/>
</LinearLayout>