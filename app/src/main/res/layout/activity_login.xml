<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="351dp"
        android:layout_height="107dp"
        android:layout_marginEnd="@dimen/dp50"
        android:layout_marginBottom="@dimen/dp10"
        android:src="@drawable/login1" />

    <TextView
        android:layout_marginTop="@dimen/dp20"
        android:layout_gravity="center"
        android:alpha="0.8"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:text="@string/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/dp20"
        android:layout_gravity="center"
        android:alpha="0.8"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="@string/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:paddingEnd="@dimen/dp5"
        android:id="@+id/edt_Email"
        android:textSize="@dimen/sp14"
        android:hint="@string/email"
        android:layout_marginTop="@dimen/dp20"
        android:paddingStart="15dp"
        android:drawablePadding="@dimen/dp15"
        android:drawableStart="@drawable/profile"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bg_button_normal_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@drawable/bg_button_normal_login"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50">
        <androidx.appcompat.widget.AppCompatEditText
            android:background="@null"
            android:layout_gravity="center"
            android:imeOptions="actionDone"
            android:paddingEnd="@dimen/dp5"
            android:inputType="textPassword"
            android:id="@+id/edt_Password"
            android:textSize="@dimen/sp14"
            android:hint="@string/password"
            android:paddingStart="20dp"
            android:drawablePadding="15dp"
            android:drawableStart="@drawable/password"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/imgShowPassword"
            android:src="@drawable/ic_showpass"
            android:layout_marginEnd="@dimen/dp10"
            android:padding="@dimen/dp5"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp34"
            android:layout_height="@dimen/dp34"/>
    </LinearLayout>

    <TextView
        android:id="@+id/forgotPass"
        android:layout_marginEnd="@dimen/dp56"
        android:layout_marginTop="@dimen/dp20"
        android:layout_gravity="end"
        android:text="@string/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView

            android:layout_marginEnd="@dimen/dp10"
            android:layout_gravity="center|start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:text="@string/login"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatImageView
            android:clickable="true"
            android:foreground="?android:attr/actionBarItemBackground"
            android:focusable="true"
            android:id="@+id/img_Login"
            android:layout_marginEnd="40dp"
            android:padding="@dimen/dp10"
            android:background="@drawable/bg_button_default"
            android:src="@drawable/right"
            android:layout_width="@dimen/dp82"
            android:layout_height="40dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginTop="@dimen/dp20"
            android:id="@+id/imageView2"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"

            android:src="@drawable/login_2" />
        <TextView
            android:layout_marginTop="@dimen/dp100"
            android:text="Don't have an account? "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_Create"
            android:layout_marginTop="@dimen/dp100"
            android:text="@string/no_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>




</LinearLayout>