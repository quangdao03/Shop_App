<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_left_right"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dp20"
    android:paddingBottom="@dimen/dp20">

    <ImageView
        android:id="@+id/a"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_baseline_remove_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/TextViewBase"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/buy_product"
            android:textColor="@color/black"
            android:textSize="@dimen/sp18"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="@dimen/dp36"
            android:layout_height="@dimen/dp36"
            android:layout_gravity="center|end"
            android:padding="@dimen/dp5"
            android:src="@drawable/ic_icons_close" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="#E7DEDE"
            app:cardCornerRadius="@dimen/dp10"
            android:layout_width="100dp"
            android:layout_height="100dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_Product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/fram1" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp20"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dialog_name"
                style="@style/TextViewBase"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/tv_dialog_creator"
                style="@style/TextViewBase"
                android:layout_marginTop="@dimen/dp10"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="@dimen/sp14" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_detail"
            style="@style/TextViewBase"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/dp10"
            android:text="@string/view_detail"
            android:textColor="@color/color_app"
            android:textSize="@dimen/sp13" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp20"
        android:background="#E4E4E4" />

    <TextView
        style="@style/TextViewBase"
        android:layout_marginTop="@dimen/dp20"
        android:text="@string/variants"
        android:textColor="@color/black"
        android:textSize="@dimen/sp14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_variant"
            style="@style/TextViewBase"
            android:layout_marginEnd="@dimen/dp10"
            android:background="@drawable/bg_edt_login"
            android:drawableEnd="@drawable/ic_icon_check__style_stroke"
            android:drawablePadding="@dimen/dp5"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:text="@string/ml"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/TextViewBase"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginEnd="@dimen/dp20"
            android:text="@string/price"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_price_product"
            style="@style/TextViewBase"
            android:layout_marginTop="@dimen/dp20"
            android:text="@string/price"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp20"
        android:orientation="horizontal">

        <TextView
            style="@style/TextViewBase"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/quantity"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_price_product_final"
            style="@style/TextViewBase"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/dp20"
            android:text="@string/price"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/count_down"
                android:layout_width="@dimen/dp34"
                android:layout_height="@dimen/dp34"
                android:background="@drawable/bg_count"
                android:padding="@dimen/dp10"
                android:src="@drawable/icons" />

            <TextView
                android:id="@+id/tv_quantity"
                style="@style/TextViewBase"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginEnd="@dimen/dp20"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/count_add"
                android:layout_width="@dimen/dp34"
                android:layout_height="@dimen/dp34"
                android:layout_gravity="center"
                android:background="@drawable/bg_count"
                android:paddingStart="@dimen/dp5"
                android:paddingTop="@dimen/dp5"
                android:paddingEnd="@dimen/dp5"
                android:src="@drawable/ic_add_count" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_AddToCart"
            style="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_add_cart"
            android:text="@string/add_cart"
            android:textColor="@color/color_app"
            android:textSize="@dimen/sp16"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>