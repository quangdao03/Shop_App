<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Shop_App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/white</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextViewBase">
        <item name="android:fontFamily">@font/readex</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/rgb_033544</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>
    <style name="IconImageViewBase">
        <item name="android:layout_height">@dimen/dp48</item>
        <item name="android:layout_width">@dimen/dp48</item>
        <item name="android:padding">@dimen/dp12</item>

    </style>
    <style name="textTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextInputSupport">
        <item name="android:fontFamily">@font/readex</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/dp16</item>
        <item name="android:textColorHint">@color/rgb_033544</item>
        <item name="hintTextAppearance">@style/TextLabelSupport</item>
    </style>
    <style name="TextLabelSupport" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/sp13</item>
    </style>
    <style name="EditTextBase">
        <item name="android:fontFamily">@font/readex</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/rgb_033544</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>
    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/color_app</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>
</resources>