<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
        >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_marginStart="@dimen/dp10"
            android:layout_gravity="center"
            android:background="#FDC27A"
            app:riv_corner_radius="10dp"
            android:id="@+id/imag_Order"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/fram1"
/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp10"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_name_order"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp15"
                    android:text="Full of Light"
                    style="@style/TextViewBase"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginEnd="@dimen/dp5"
                    android:alpha="0.6"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp13"
                    android:text="Variant:"
                    style="@style/TextViewBase"/>
                <TextView
                    android:id="@+id/tv_variant_order"
                    android:alpha="0.6"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp13"
                    android:text="100 ml"
                    style="@style/TextViewBase"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginEnd="@dimen/dp5"
                    android:alpha="0.6"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp13"
                    android:text="Quantity:"
                    style="@style/TextViewBase"/>
                <TextView
                    android:id="@+id/tv_quantity_order"
                    android:alpha="0.6"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp13"
                    android:text="2"
                    style="@style/TextViewBase"/>
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:alpha="0.7"
                    android:textColor="@color/black"
                    android:text="Price"
                    style="@style/TextViewBase"/>
                <TextView
                    android:layout_marginEnd="@dimen/dp20"
                    android:id="@+id/tv_price_order"
                    android:textColor="@color/black"
                    android:text="Rp 999.999"
                    style="@style/TextViewBase"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:paddingBottom="@dimen/dp5"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_gravity="center"

            android:orientation="vertical">



        </LinearLayout>
    </LinearLayout>
    <View
        android:background="#BBBBBB"
        android:layout_margin="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp2"/>
</LinearLayout>